<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#DFF3FF">

    <!-- Heading -->
    <TextView
        android:id="@+id/textLoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in to Smart Air"
        android:textSize="24sp"
        android:textColor="#2E7D32"
        android:fontFamily="@font/nunito_regular"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- Email (parent/provider) OR username (child) -->
    <EditText
        android:id="@+id/editTextIdentifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email (parent/provider) or child username"
        android:inputType="textEmailAddress|textPersonName"
        android:background="@android:color/white"
        android:padding="12dp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="12dp"
        android:background="@android:color/white"
        android:padding="12dp" />

    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_marginTop="24dp"
        android:backgroundTint="#2E7D32"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:textColor="#2E7D32"
        android:fontFamily="@font/nunito_medium"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textViewError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:visibility="gone"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/nunito_medium"
        android:text="@string/back_button"
        android:textColor="#2E7D32"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <include
        android:id="@+id/safetyNote"
        layout="@layout/view_safety_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />


</LinearLayout>