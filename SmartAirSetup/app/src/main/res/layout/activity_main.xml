<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#DFF3FF">

    <!-- Welcome heading -->
    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Smart Air"
        android:textSize="24sp"
        android:textColor="#2E7D32"
        android:fontFamily="@font/nunito_regular"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/asthma_logo"
        android:contentDescription="Asthma logo" />

    <Button
        android:id="@+id/buttonNewUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I'm a new user"
        android:layout_marginTop="32dp"
        android:backgroundTint="#2E7D32"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonExistingUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I'm an existing user"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2E7D32"
        android:textColor="@android:color/white" />

</LinearLayout>