<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEBEE"
    android:padding="16dp">

    <!-- Title -->

    <!-- Message -->
    <TextView
        android:id="@+id/textEmergencyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:text="EMERGENCY!"
        android:textColor="#B71C1C"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textEmergencyMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You are showing red-flag symptoms.\n\nCall emergency services immediately and follow the instructions below."
        android:textSize="18sp"
        android:textColor="#1B2631"
        android:fontFamily="@font/nunito_medium"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textEmergencyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Steps -->
    <TextView
        android:id="@+id/textStepsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_regular"
        android:text="Steps to take:"
        android:textColor="#D32F2F"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textEmergencyMessage" />

    <LinearLayout
        android:id="@+id/layoutSteps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textStepsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Call emergency services immediately"
            android:textSize="16sp"
            android:textColor="#1B2631"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Use rescue inhaler as prescribed while waiting"
            android:textSize="16sp"
            android:textColor="#1B2631"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Keep your child calm and upright"
            android:textSize="16sp"
            android:textColor="#1B2631"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Do not wait to see if symptoms improve"
            android:textSize="16sp"
            android:textColor="#1B2631"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>

    <!-- Call Emergency button -->

    <!-- Bottom Buttons -->

    <Button
        android:id="@+id/buttonCallEmergency"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="180dp"
        android:backgroundTint="#B71C1C"
        android:elevation="4dp"
        android:fontFamily="@font/nunito_medium"
        android:text="Call Emergency Services"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/buttonBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:text="Back"
        android:textColor="#B71C1C"
        android:textSize="22sp"
        android:fontFamily="@font/nunito_medium"
        android:background="@android:color/transparent"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/nunito_medium"
        android:text="Main"
        android:textColor="#B71C1C"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>