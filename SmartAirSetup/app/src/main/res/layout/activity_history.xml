<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF3FF"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textHistoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1B4F72" />

    <!-- Child selector -->
    <TextView
        android:id="@+id/textChildFilterLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Child"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/spinnerChilds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Date range -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date range (YYYY-MM-DD)"
        android:layout_marginTop="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editStartDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Start" />

        <EditText
            android:id="@+id/editEndDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:hint="End" />
    </LinearLayout>

    <!-- Trigger filter -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter by trigger"
        android:layout_marginTop="12dp" />

    <Spinner
        android:id="@+id/spinnerTriggerFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Symptom filter -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter by symptom"
        android:layout_marginTop="12dp" />

    <Spinner
        android:id="@+id/spinnerSymptomFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonApplyFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply filters"
        android:backgroundTint="@color/button_icon_color"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/buttonExportCSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_icon_color"
        android:text="Export as CSV"
        android:layout_marginTop="12dp" />
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_icon_color"
        android:text="Go Back to Main"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textSymptomSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp" />

    <!-- ListView gets remaining space -->
    <ListView
        android:id="@+id/listHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp" />

    <include
        android:id="@+id/safetyNote"
        layout="@layout/view_safety_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>
