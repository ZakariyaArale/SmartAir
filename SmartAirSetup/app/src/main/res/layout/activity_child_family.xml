<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_colour"
    tools:context=".ChildFamilyActivity">

    <!-- Header: Family Members -->
    <TextView
        android:id="@+id/titleFamilyMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Family Members"
        android:fontFamily="@font/nunito_regular"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--
    ============================================================
    ==      CARD VIEW FOR THE FAMILY MEMBERS LIST             ==
    ============================================================
    -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/familyTableCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleFamilyMembers">

        <!-- Layout inside the card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- This list will be populated dynamically. -->
            <!-- Let's add an example row for now. -->
            <!-- In a real app, this would be a RecyclerView. -->

            <!-- Example Family Member Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/person" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Rohat D"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Separator Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#E0E0E0" />

            <!-- Example Family Member Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/person" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Rohat M"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Child"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- BELOW THIS LINE ARE THE NAVIGATION MENU BUTTONS -->

    <!-- BOTTOM NAV BACKGROUND -->
    <View
        android:id="@+id/bottomNavBackground"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_nav_background"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Home Button + Text -->
    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Home"
        android:elevation="9dp"
        android:paddingTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/homeText"
        app:layout_constraintEnd_toEndOf="@id/homeText"
        app:layout_constraintStart_toStartOf="@id/homeText"
        app:layout_constraintTop_toTopOf="@id/bottomNavBackground"
        app:srcCompat="@drawable/menu_home_button_logo"
        app:tint="@color/active_button_icon_color" />

    <TextView
        android:id="@+id/homeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="Home"
        android:textColor="@color/active_button_icon_color"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/bottomNavBackground"
        app:layout_constraintEnd_toStartOf="@+id/familyText"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@id/bottomNavBackground" />

    <!-- Family Button + Text -->
    <ImageButton
        android:id="@+id/familyButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Family"
        android:elevation="9dp"
        android:paddingTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/familyText"
        app:layout_constraintEnd_toEndOf="@id/familyText"
        app:layout_constraintStart_toStartOf="@id/familyText"
        app:layout_constraintTop_toTopOf="@id/bottomNavBackground"
        app:srcCompat="@drawable/menu_family_button_logo"
        app:tint="@color/button_icon_color" />

    <TextView
        android:id="@+id/familyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="Family"
        android:textColor="@color/button_icon_color"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/bottomNavBackground"
        app:layout_constraintEnd_toStartOf="@+id/emergencyText"
        app:layout_constraintStart_toEndOf="@+id/homeText" />

    <!-- Emergency Button + Text -->
    <ImageButton
        android:id="@+id/emergencyButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Emergency"
        android:elevation="9dp"
        android:paddingTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/emergencyText"
        app:layout_constraintEnd_toEndOf="@id/emergencyText"
        app:layout_constraintStart_toStartOf="@id/emergencyText"
        app:layout_constraintTop_toTopOf="@id/bottomNavBackground"
        app:srcCompat="@drawable/menu_emergency_button_logo"
        app:tint="@color/button_icon_color" />

    <TextView
        android:id="@+id/emergencyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="Emergency"
        android:textColor="@color/button_icon_color"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/bottomNavBackground"
        app:layout_constraintEnd_toStartOf="@+id/settingsText"
        app:layout_constraintStart_toEndOf="@+id/familyText" />

    <!-- Settings Button + Text -->
    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Settings"
        android:elevation="9dp"
        android:paddingTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/settingsText"
        app:layout_constraintEnd_toEndOf="@id/settingsText"
        app:layout_constraintStart_toStartOf="@id/settingsText"
        app:layout_constraintTop_toTopOf="@id/bottomNavBackground"
        app:srcCompat="@drawable/menu_settings_button_logo"
        app:tint="@color/button_icon_color" />

    <TextView
        android:id="@+id/settingsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="Settings"
        android:textColor="@color/button_icon_color"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/bottomNavBackground"
        app:layout_constraintEnd_toEndOf="@id/bottomNavBackground"
        app:layout_constraintStart_toEndOf="@+id/emergencyText" />

</androidx.constraintlayout.widget.ConstraintLayout>
