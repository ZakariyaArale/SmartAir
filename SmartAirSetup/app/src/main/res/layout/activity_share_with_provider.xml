<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF3FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textShareTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share with Provider"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1B4F72"
            android:fontFamily="@font/nunito_medium"
            android:paddingBottom="8dp" />

        <!-- Child name -->
        <TextView
            android:id="@+id/textChildName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Child name"
            android:textSize="18sp"
            android:textColor="#004D40"
            android:fontFamily="@font/nunito_regular"
            android:paddingBottom="16dp" />

        <!-- Info line -->
        <TextView
            android:id="@+id/textShareInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose what this childâ€™s provider can see. Changes apply immediately and can be turned off at any time."
            android:textSize="14sp"
            android:textColor="#4F4F4F"
            android:fontFamily="@font/nunito_light"
            android:paddingBottom="24dp" />

        <!-- Rescue logs -->
        <Switch
            android:id="@+id/switchRescueLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rescue inhaler logs"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_regular"
            android:padding="8dp" />

        <!-- Controller adherence summary -->
        <Switch
            android:id="@+id/switchControllerSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Controller adherence summary"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_regular"
            android:padding="8dp" />

        <!-- Symptoms -->
        <Switch
            android:id="@+id/switchSymptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Symptoms"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_regular"
            android:padding="8dp" />

        <!-- Triggers -->
        <Switch
            android:id="@+id/switchTriggers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Triggers"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_regular"
            android:padding="8dp" />

        <!-- Peak Flow (PEF) -->
        <Switch
            android:id="@+id/switchPEF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peak-flow (PEF)"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_regular"
            android:padding="8dp" />

        <!-- Triage incidents -->
        <Switch
            android:id="@+id/switchTriageIncidents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Triage incidents"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_regular"
            android:padding="8dp" />

        <!-- Summary charts -->
        <Switch
            android:id="@+id/switchSummaryCharts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary charts &amp; visuals"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_regular"
            android:padding="8dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="107dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nunito_medium"
            android:text="@string/back_button"
            android:textColor="#2E7D32"
            android:textSize="22sp" />

    </LinearLayout>
</ScrollView>
