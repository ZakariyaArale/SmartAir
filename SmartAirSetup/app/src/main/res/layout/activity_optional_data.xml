<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#DFF3FF">

    <!-- Title -->
    <TextView
        android:id="@+id/emergencyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Emergency Check"
        android:textSize="26sp"
        android:textColor="#2E7D32"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Select Child Section -->
    <LinearLayout
        android:id="@+id/childSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/emergencyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/chooseChildLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Child"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_medium"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/chooseChildButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E6F7FF"
            android:elevation="2dp"
            android:fontFamily="@font/nunito_medium"
            android:padding="12dp"
            android:text="Choose Child"
            android:textColor="#2E7D32"
            android:textSize="18sp"/>
    </LinearLayout>

    <!-- Rescue Attempts -->
    <LinearLayout
        android:id="@+id/rescueSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/childSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/rescueLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Rescue Attempts within 3 hours"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_medium"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/rescueInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter number"
            android:inputType="number"
            android:backgroundTint="#E6F7FF"
            android:textSize="16sp"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- Optional PEF -->
    <LinearLayout
        android:id="@+id/pefSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/rescueSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/pefLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current PEF (optional)"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_medium"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:backgroundTint="#E6F7FF"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/pefInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Enter PEF (optional)"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/pefUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L/min"
                android:textColor="#666666"
                android:textSize="16sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Save"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/nunito_medium"
        android:backgroundTint="#2E7D32"
        android:elevation="4dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/pefSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/nunito_medium"
        android:text="Back"
        android:textColor="#2E7D32"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/nunito_medium"
        android:text="Next"
        android:textColor="#2E7D32"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>