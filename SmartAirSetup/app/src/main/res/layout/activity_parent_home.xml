<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_colour"
    tools:context=".parent_home_ui.ParentHomeActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/textParentTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:paddingBottom="8dp"
        android:text="Parent Home"
        android:textColor="#1B4F72"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/notificationButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top right: Notification -->
    <ImageButton
        android:id="@+id/notificationButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Notifications"
        android:padding="6dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_notifications_button_logo"
        app:tint="@color/button_icon_color" />

    <!-- Child selector + weekly rescue overview -->
    <FrameLayout
        android:id="@+id/overviewContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/main_content_background"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notificationButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/textWeeklyOverviewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="Child Summary"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonOverviewSelectChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="#E6F7FF"
                android:elevation="2dp"
                android:fontFamily="@font/nunito_medium"
                android:padding="12dp"
                android:text="Select child"
                android:textColor="#2E7D32"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textWeeklyRescue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Rescue medication count this week: 0"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textLastRescueUsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Last rescue medication use: â€”"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <!-- Tag: Weekly rescue is shared -->
            <TextView
                android:id="@+id/tagSharedRescue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Shared with provider"
                android:textSize="12sp"
                android:textColor="#2E7D32"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_shared_tag"
                android:visibility="gone" />

        </LinearLayout>
    </FrameLayout>

    <!-- Main shortcuts card -->
    <ScrollView
        android:id="@+id/shortcutContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/main_content_background"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/safetyNote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/overviewContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/shortcutsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Shortcuts"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Daily Check-in -->
            <Button
                android:id="@+id/buttonDailyCheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/button_icon_color"
                android:text="Daily Check-in" />

            <TextView
                android:id="@+id/tagSharedSymptoms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Shared with provider"
                android:textSize="12sp"
                android:textColor="#2E7D32"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_shared_tag"
                android:visibility="gone" />

            <!-- View History -->
            <Button
                android:id="@+id/buttonViewHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/button_icon_color"
                android:text="View History" />

            <TextView
                android:id="@+id/tagSharedHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Shared with provider"
                android:textSize="12sp"
                android:textColor="#2E7D32"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_shared_tag"
                android:visibility="gone" />

            <!-- Child Overview -->
            <Button
                android:id="@+id/buttonChildOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/button_icon_color"
                android:text="Child Overview" />

            <!-- Set Personal Best -->
            <Button
                android:id="@+id/buttonSetPB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/button_icon_color"
                android:text="Set Personal Best" />

            <TextView
                android:id="@+id/tagSharedPB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Shared with provider"
                android:textSize="12sp"
                android:textColor="#2E7D32"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_shared_tag"
                android:visibility="gone" />

            <!-- Enter PEF -->
            <Button
                android:id="@+id/buttonEnterPEF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/button_icon_color"
                android:text="Enter PEF" />

            <TextView
                android:id="@+id/tagSharedPEF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Shared with provider"
                android:textSize="12sp"
                android:textColor="#2E7D32"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_shared_tag"
                android:visibility="gone" />

            <!-- Add Child -->
            <Button
                android:id="@+id/buttonAddChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/button_icon_color"
                android:text="Add Child" />

            <!-- Add Badges -->
            <Button
                android:id="@+id/buttonAddBadges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/button_icon_color"
                android:text="Add Badges" />

            <!-- Medication Inventory -->
            <Button
                android:id="@+id/buttonMedicationInventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/button_icon_color"
                android:text="Medication Inventory" />

            <!-- PDF -->
            <Button
                android:id="@+id/buttonPDF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/button_icon_color"
                android:text="PDF" />

            <TextView
                android:id="@+id/tagSharedPDF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Shared with provider"
                android:textSize="12sp"
                android:textColor="#2E7D32"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_shared_tag"
                android:visibility="gone" />

            <!-- Zone -->
            <Button
                android:id="@+id/buttonZone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/button_icon_color"
                android:text="Zone" />

            <TextView
                android:id="@+id/tagSharedZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Shared with provider"
                android:textSize="12sp"
                android:textColor="#2E7D32"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_shared_tag"
                android:visibility="gone" />

            <!-- Controller Logs -->
            <Button
                android:id="@+id/buttonControllerLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/button_icon_color"
                android:text="Controller Logs" />

            <TextView
                android:id="@+id/tagSharedController"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Shared with provider"
                android:textSize="12sp"
                android:textColor="#2E7D32"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_shared_tag"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- Safety note: sits ABOVE the bottom nav -->
    <include
        android:id="@+id/safetyNote"
        layout="@layout/view_safety_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bottom nav background -->
    <View
        android:id="@+id/bottomNavBackground"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_nav_background"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Home -->
    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Home"
        android:elevation="9dp"
        android:paddingTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/homeText"
        app:layout_constraintEnd_toEndOf="@id/homeText"
        app:layout_constraintStart_toStartOf="@id/homeText"
        app:layout_constraintTop_toTopOf="@id/bottomNavBackground"
        app:srcCompat="@drawable/menu_home_button_logo"
        app:tint="@color/active_button_icon_color" />

    <TextView
        android:id="@+id/homeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="Home"
        android:textColor="@color/active_button_icon_color"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/bottomNavBackground"
        app:layout_constraintEnd_toStartOf="@+id/familyText"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@id/bottomNavBackground" />

    <!-- Family -->
    <ImageButton
        android:id="@+id/familyButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Family"
        android:elevation="9dp"
        android:paddingTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/familyText"
        app:layout_constraintEnd_toEndOf="@id/familyText"
        app:layout_constraintStart_toStartOf="@id/familyText"
        app:layout_constraintTop_toTopOf="@id/bottomNavBackground"
        app:srcCompat="@drawable/menu_family_button_logo"
        app:tint="@color/button_icon_color" />

    <TextView
        android:id="@+id/familyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="Family"
        android:textColor="@color/button_icon_color"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/bottomNavBackground"
        app:layout_constraintEnd_toStartOf="@+id/emergencyText"
        app:layout_constraintStart_toEndOf="@+id/homeText" />

    <!-- Emergency -->
    <ImageButton
        android:id="@+id/emergencyButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Emergency"
        android:elevation="9dp"
        android:paddingTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/emergencyText"
        app:layout_constraintEnd_toEndOf="@id/emergencyText"
        app:layout_constraintStart_toStartOf="@id/emergencyText"
        app:layout_constraintTop_toTopOf="@id/bottomNavBackground"
        app:srcCompat="@drawable/menu_emergency_button_logo"
        app:tint="@color/button_icon_color" />

    <TextView
        android:id="@+id/emergencyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="Emergency"
        android:textColor="@color/button_icon_color"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/bottomNavBackground"
        app:layout_constraintEnd_toStartOf="@+id/settingsText"
        app:layout_constraintStart_toEndOf="@+id/familyText" />

    <!-- Settings -->
    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Settings"
        android:elevation="9dp"
        android:paddingTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/settingsText"
        app:layout_constraintEnd_toEndOf="@id/settingsText"
        app:layout_constraintStart_toStartOf="@id/settingsText"
        app:layout_constraintTop_toTopOf="@id/bottomNavBackground"
        app:srcCompat="@drawable/menu_settings_button_logo"
        app:tint="@color/button_icon_color" />

    <TextView
        android:id="@+id/settingsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="Settings"
        android:textColor="@color/button_icon_color"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/bottomNavBackground"
        app:layout_constraintEnd_toEndOf="@id/bottomNavBackground"
        app:layout_constraintStart_toEndOf="@+id/emergencyText" />

</androidx.constraintlayout.widget.ConstraintLayout>