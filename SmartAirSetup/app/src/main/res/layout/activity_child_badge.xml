<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/childBadgesRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF3FF"
    android:padding="16dp"
    tools:context=".ChildBadgesActivity">



    <!-- ScrollView: Badge List -->

    <TextView
        android:id="@+id/textBackBadges"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"
        android:text="Back"
        android:textColor="#2E7D32"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollBadges"
        android:layout_width="377dp"
        android:layout_height="626dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textBackBadges"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/layoutBadgesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER -->

            <!-- 1) First perfect controller week -->

            <LinearLayout
                android:id="@+id/rowBadgePerfectWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageBadgePerfectWeek"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Perfect controller week badge"
                    android:src="@drawable/badge" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/textBadgePerfectWeekTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Perfect Controller Week"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textBadgePerfectWeekDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take controller every planned day for one week."
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 2) High-quality technique sessions -->
            <LinearLayout
                android:id="@+id/rowBadgeTechnique"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageBadgeTechnique"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Technique sessions badge"
                    android:src="@drawable/badge" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/textBadgeTechniqueTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High-Quality Technique Sessions"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textBadgeTechniqueDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Use perfect inhaler technique 10 times."
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 3) Low rescue month -->
            <LinearLayout
                android:id="@+id/rowBadgeLowRescueMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageBadgeLowRescueMonth"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Low rescue month badge"
                    android:src="@drawable/badge" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/textBadgeLowRescueMonthTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low Rescue Month"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textBadgeLowRescueMonthDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Have a month with few rescue days."
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textChildBadgesTitle"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="My Badges"
        android:textColor="@color/button_icon_color"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="6dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
