<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF3FF"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/pbTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pef_title"
        android:textSize="26sp"
        android:textColor="#2E7D32"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/pbSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pef_subtitle"
        android:textColor="#666666"
        android:textSize="16sp"
        android:fontFamily="@font/nunito_medium"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/pbTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Select Child Section -->
    <LinearLayout
        android:id="@+id/childSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/pbSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/chooseChildLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_child"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_medium"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/chooseChildButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E6F7FF"
            android:elevation="2dp"
            android:fontFamily="@font/nunito_medium"
            android:padding="12dp"
            android:text="@string/choose_child"
            android:textColor="#2E7D32"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Enter PEF Section -->
    <LinearLayout
        android:id="@+id/pbInputSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/childSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/pbEntryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pef_entry_label"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_medium"
            android:layout_marginBottom="8dp"/>

        <!-- Daily PEF section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:backgroundTint="#E6F7FF"
            android:elevation="2dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/dailyPEFInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Daily"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/dailyUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_lmin"
                android:textColor="#666666"
                android:textSize="16sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Pre-medication PEF section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:backgroundTint="#E6F7FF"
            android:elevation="2dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/preMedicationPB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/pre_med_hint"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/preUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_lmin"
                android:textColor="#666666"
                android:textSize="16sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Post-medication PEF section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:backgroundTint="#E6F7FF"
            android:elevation="2dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/postMedicationPB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/post_med_hint"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/postUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_lmin"
                android:textColor="#666666"
                android:textSize="16sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Save Button -->
    <Button
        android:id="@+id/savePBButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/save_button"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/nunito_medium"
        android:backgroundTint="#2E7D32"
        android:elevation="4dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/pbInputSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        android:id="@+id/safetyNote"
        layout="@layout/view_safety_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/backButton"/>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/nunito_medium"
        android:text="@string/back_button"
        android:textColor="#2E7D32"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>