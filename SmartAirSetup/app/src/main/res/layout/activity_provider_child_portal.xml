<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DFF3FF"
    android:padding="24dp">

    <TextView
        android:id="@+id/textProviderChildTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Child"
        android:textSize="24sp"
        android:textColor="#2E7D32"
        android:fontFamily="@font/nunito_regular"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnProviderRescueLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rescue logs"
        android:backgroundTint="#2E7D32"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnProviderSymptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Symptoms"
        android:layout_marginTop="12dp"
        android:backgroundTint="#2E7D32"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnProviderPEF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PEF"
        android:layout_marginTop="12dp"
        android:backgroundTint="#2E7D32"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnProviderCharts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Summary charts"
        android:layout_marginTop="12dp"
        android:backgroundTint="#2E7D32"
        android:textColor="@android:color/white"/>
    <Button
        android:id="@+id/btnPDF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PDF"
        android:layout_marginTop="12dp"
        android:backgroundTint="#2E7D32"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnProviderControllerSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Controller adherence summary"
        android:layout_marginTop="12dp"
        android:backgroundTint="#2E7D32"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnProviderTriggers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Triggers"
        android:layout_marginTop="12dp"
        android:backgroundTint="#2E7D32"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnProviderTriageIncidents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Triage incidents"
        android:layout_marginTop="12dp"
        android:backgroundTint="#2E7D32"
        android:textColor="@android:color/white"/>

    <include
        android:id="@+id/safetyNote"
        layout="@layout/view_safety_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/nunito_medium"
        android:text="@string/back_button"
        android:textColor="#2E7D32"
        android:textSize="22sp" />

</LinearLayout>