<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF3FF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textReportTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medication report"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textReportChildName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Child:"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textReportRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Range: last 30 days"
            android:layout_marginTop="8dp" />

        <!-- For Story 2, we care about this one -->
        <TextView
            android:id="@+id/textReportAdherence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Controller adherence..."
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nunito_medium"
            android:text="@string/back_button"
            android:textColor="#2E7D32"
            android:textSize="22sp" />

        <include
            android:id="@+id/safetyNote"
            layout="@layout/view_safety_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>