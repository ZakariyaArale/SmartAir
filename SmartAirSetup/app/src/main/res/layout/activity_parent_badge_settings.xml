<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/badgeSettingsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#DFF3FF"
    tools:context=".ParentBadgeSettingsActivity">

    <!-- Upper BAR: Child seçimi + Back -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textSelectChildLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/button_icon_color" />

        <Spinner
            android:id="@+id/spinnerChildren"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1" />

        <!-- Back butonu -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nunito_medium"
            android:text="@string/back_button"
            android:textColor="#2E7D32"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/textBadgeSettingsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Badge Goals Settings"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/button_icon_color"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- First perfect controller week -->
    <TextView
        android:id="@+id/textPerfectControllerLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="First perfect controller week: days per week target"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textBadgeSettingsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editPerfectControllerDays"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Default: 1"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/textPerfectControllerLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 10 high-quality technique sessions -->
    <TextView
        android:id="@+id/textTechniqueSessionsLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="High-quality technique sessions badge: target count"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editPerfectControllerDays"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTechniqueSessions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Default: 10"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/textTechniqueSessionsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- low rescue month (≤ X rescue days / 30 days) -->
    <TextView
        android:id="@+id/textLowRescueDaysLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Low rescue month: max rescue days in 30 days"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTechniqueSessions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editLowRescueDays"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Default: 4"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/textLowRescueDaysLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Save button -->
    <Button
        android:id="@+id/buttonSaveBadgeSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save badge goals"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/button_icon_color"
        app:layout_constraintTop_toBottomOf="@id/editLowRescueDays"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
