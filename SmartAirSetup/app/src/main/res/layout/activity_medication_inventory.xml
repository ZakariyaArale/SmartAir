<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF3FF"
    tools:context=".medlog.MedicationInventoryActivity">

    <!-- Heading -->
    <TextView
        android:id="@+id/MedInventoryHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:text="Medication Inventory (add to values xml)"
        android:textColor="#2E7D32"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/onboardingSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:breakStrategy="simple"
        android:fontFamily="@font/nunito_medium"
        android:gravity="center"
        android:text="List of all medications(add to values xml)"
        android:textColor="#666666"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MedInventoryHeading" />

    <!-- Med list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medicineList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/onboardingSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/medDetailsSV"
        tools:listitem="@android:layout/simple_list_item_1" />

    <!-- Selected med details -->
    <ScrollView
        android:id="@+id/medDetailsSV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:fillViewport="true"
        android:padding="12dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/medicineList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/actionButtonsRow">

        <LinearLayout
            android:id="@+id/medDetailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/medNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="Ventolin" />

            <TextView
                android:id="@+id/purchaseDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:textSize="18sp"
                tools:text="Purchased: 2025-11-01" />

            <TextView
                android:id="@+id/expiryDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:textSize="18sp"
                tools:text="Expires: 2026-11-01" />

            <TextView
                android:id="@+id/dosesLeftTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:textSize="18sp"
                tools:text="Puffs left: 120" />

            <TextView
                android:id="@+id/medNotesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:textSize="18sp"
                tools:text="Notes: Use as needed." />

        </LinearLayout>
    </ScrollView>

    <!-- Action buttons row -->
    <LinearLayout
        android:id="@+id/actionButtonsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavRow">

        <Button
            android:id="@+id/newMedButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#2E7D32"
            android:text="New Medication (add to values xml)"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editMedButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:backgroundTint="#2E7D32"
                android:text="Edit"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:enabled="false"
                android:alpha="0.5" />

            <View
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/deleteMedButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:backgroundTint="#2E7D32"
                android:text="Delete"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:enabled="false"
                android:alpha="0.5" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom row: back + notif -->
    <LinearLayout
        android:id="@+id/bottomNavRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/safetyNote">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nunito_medium"
            android:text="Back"
            android:textColor="#2E7D32"
            android:textSize="22sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonNotif"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="#2E7D32"
            android:text="Test Notification (add to values xml)"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Safety note include -->
    <include
        android:id="@+id/safetyNote"
        layout="@layout/view_safety_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>