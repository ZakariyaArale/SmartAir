<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFDE7">

    <!-- Title -->
    <TextView
        android:id="@+id/yellowZoneTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Yellow Zone"
        android:textColor="#D59C00"
        android:textSize="26sp"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/yellowZoneSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Care Actions"
        android:textColor="#D59C00"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_medium"
        android:gravity="start"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/yellowZoneTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Generic List of Treatments -->
    <LinearLayout
        android:id="@+id/careListYellow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:background="#FFF9C4"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/yellowZoneSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Take controller inhaler as prescribed"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Monitor symptoms closely and record PEF if available"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Avoid known triggers if possible"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Contact healthcare provider if symptoms worsen"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Guidance Note -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note: This is guidance, not a diagnosis. If symptoms escalate, call emergency."
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_medium"
            android:textStyle="italic"/>
    </LinearLayout>

    <!-- Action buttons (Feel worse + Timer) -->
    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/careListYellow"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonFeelWorse"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nunito_medium"
            android:text="New symptoms / Feel worse"
            android:textColor="#D59C00"
            android:textSize="18sp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"/>

        <Button
            android:id="@+id/buttonStartTimer"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nunito_medium"
            android:text="Start 10-min timer"
            android:textColor="#D59C00"
            android:textSize="18sp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"/>
    </LinearLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/backButton"
            android:layout_width="107dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nunito_medium"
            android:text="Back"
            android:textColor="#D59C00"
            android:textSize="22sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="107dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nunito_medium"
            android:text="Main"
            android:textColor="#D59C00"
            android:textSize="22sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>