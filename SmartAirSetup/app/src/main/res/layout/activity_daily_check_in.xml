<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF3FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:id="@+id/textCheckInTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily asthma check-in"
            android:textSize="24sp"
            android:textColor="#2E7D32"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textChildNameForCheckin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-in for ..."
            android:textSize="16sp"
            android:textColor="#1B4F72"
            android:fontFamily="@font/nunito_medium"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Night waking -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Night waking"
            android:textColor="#2E7D32"
            android:fontFamily="@font/nunito_medium" />

        <RadioGroup
            android:id="@+id/radioNightWaking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioNightNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None" />

            <RadioButton
                android:id="@+id/radioNightSome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some" />

            <RadioButton
                android:id="@+id/radioNightALot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A lot" />
        </RadioGroup>

        <!-- Activity limits -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity limits"
            android:textColor="#2E7D32"
            android:fontFamily="@font/nunito_medium"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/radioActivityLimits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioActivityNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None" />

            <RadioButton
                android:id="@+id/radioActivitySome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some" />

            <RadioButton
                android:id="@+id/radioActivityALot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A lot" />
        </RadioGroup>

        <!-- Cough / wheeze -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cough / wheeze"
            android:textColor="#2E7D32"
            android:fontFamily="@font/nunito_medium"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/radioCoughWheeze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioCoughNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None" />

            <RadioButton
                android:id="@+id/radioCoughSome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some" />

            <RadioButton
                android:id="@+id/radioCoughALot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A lot" />
        </RadioGroup>

        <!-- Triggers -->
        <TextView
            android:id="@+id/textTriggersLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Triggers (check all that apply)"
            android:textColor="#2E7D32"
            android:fontFamily="@font/nunito_medium"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/layoutTriggers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/checkTriggerExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise" />

            <CheckBox
                android:id="@+id/checkTriggerColdAir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cold air" />

            <CheckBox
                android:id="@+id/checkTriggerDustPets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dust / pets" />

            <CheckBox
                android:id="@+id/checkTriggerSmoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smoke" />

            <CheckBox
                android:id="@+id/checkTriggerIllness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Illness" />

            <CheckBox
                android:id="@+id/checkTriggerOdors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strong odors / perfumes" />
        </LinearLayout>


        <TextView
            android:id="@+id/textCheckInError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonSubmitCheckIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save check-in"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2E7D32"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginTop="6dp"
            android:backgroundTint="#2E7D32"
            android:textColor="@android:color/white" />

        <include
            android:id="@+id/safetyNote"
            layout="@layout/view_safety_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>