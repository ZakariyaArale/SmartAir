<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF3FF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:id="@+id/textSignupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create your Smart Air account"
            android:textSize="24sp"
            android:textColor="#2E7D32"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/signupEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@android:color/white"
            android:padding="12dp" />

        <EditText
            android:id="@+id/signupPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginTop="12dp"
            android:background="@android:color/white"
            android:padding="12dp" />

        <TextView
            android:id="@+id/textSignupRoleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I am a:"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_regular"
            android:textColor="#333333"
            android:gravity="start"/>

        <RadioGroup
            android:id="@+id/radioGroupRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radioParent"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parent"
                android:padding="12dp"/>

            <RadioButton
                android:id="@+id/radioProvider"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Provider"
                android:padding="12dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/signupError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create account"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2E7D32"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nunito_medium"
            android:text="@string/back_button"
            android:textColor="#2E7D32"
            android:textSize="24sp"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
