<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF3FF"
    android:padding="16dp">

    <!-- MAIN CONTENT IN A SCROLLVIEW -->
    <ScrollView
        android:id="@+id/scrollChildOverview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/safetyNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/overviewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/textChildOverviewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Child Overview"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_regular"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/textSelectChildLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select child"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_medium" />

            <Button
                android:id="@+id/buttonSelectChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#E6F7FF"
                android:elevation="2dp"
                android:fontFamily="@font/nunito_medium"
                android:padding="12dp"
                android:text="Select child"
                android:textColor="#2E7D32"
                android:textSize="18sp" />

            <!-- Short summary (we can show rescue/week or last check-in) -->
            <TextView
                android:id="@+id/textChildSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a child to view summary."
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/nunito_regular" />

            <!-- Feature buttons -->
            <Button
                android:id="@+id/buttonOpenSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Edit controller schedule"
                android:backgroundTint="@color/button_icon_color" />

            <Button
                android:id="@+id/buttonOpenSymptomTrend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="View symptom trend chart"
                android:backgroundTint="@color/button_icon_color" />

            <Button
                android:id="@+id/buttonOpenMedicationReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="View medication report"
                android:backgroundTint="@color/button_icon_color" />

            <Button
                android:id="@+id/buttonWhatProviderSees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="What provider can see"
                android:backgroundTint="@color/button_icon_color" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:fontFamily="@font/nunito_medium"
                android:text="@string/back_button"
                android:textColor="#2E7D32"
                android:textSize="22sp" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/safetyNote"
        layout="@layout/view_safety_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>