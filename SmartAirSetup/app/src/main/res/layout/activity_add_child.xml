<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DFF3FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Heading -->
        <TextView
            android:id="@+id/textAddChildTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:text="@string/add_child"
            android:textSize="24sp"
            android:textColor="#2E7D32"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/editChildUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:hint="@string/child_username"
            android:inputType="text"
            android:padding="12dp"
            android:textColorHint="#757575"
            tools:ignore="Autofill,VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/editChildPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@android:color/white"
            android:hint="@string/child_password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColorHint="#757575"
            tools:ignore="Autofill,VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/editChildConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:autofillHints=""
            android:background="@android:color/white"
            android:hint="@string/confirm_child_password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColorHint="#757575"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/editChildName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:autofillHints=""
            android:background="@android:color/white"
            android:hint="@string/child_name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColorHint="#757575"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/editChildDob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:autofillHints=""
            android:background="@android:color/white"
            android:hint="@string/date_of_birth_yyyy_mm_dd"
            android:importantForAutofill="no"
            android:inputType="date"
            android:padding="12dp"
            android:textColorHint="#757575"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/editChildNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@android:color/white"
            android:hint="@string/notes_optional"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:padding="12dp"
            android:textColorHint="#757575"
            tools:ignore="Autofill,VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/textChildError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonSaveChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_child"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2E7D32"
            android:textColor="@android:color/white"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nunito_medium"
            android:text="@string/back_button"
            android:textColor="#2E7D32"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

        <include
            android:id="@+id/safetyNote"
            layout="@layout/view_safety_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>