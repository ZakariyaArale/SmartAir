<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_selected="true">
        <shape
            android:shape="rectangle">

            <!-- Background color -->
            <solid android:color="#629a79" />

            <!-- Border -->
            <stroke
                android:width="2dp"
                android:color="#2E7D32" />  <!-- green outline -->

            <!-- Rounded corners -->
            <corners android:radius="12dp" />

            <!-- Padding inside each item -->
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />

        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape
            android:shape="rectangle">

            <!-- Background color -->
            <solid android:color="#c2d8cb" />

            <!-- Border -->
            <stroke
                android:width="2dp"
                android:color="#2E7D32" />  <!-- green outline -->

            <!-- Rounded corners -->
            <corners android:radius="12dp" />

            <!-- Padding inside each item -->
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />

        </shape>
    </item>

</selector>